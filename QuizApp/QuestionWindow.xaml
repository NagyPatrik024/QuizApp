<Window x:Class="_2ora.QuestionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2ora"
        mc:Ignorable="d"
        Title="QuestionWindow" Height="513" Width="378"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    <StackPanel x:Name="sp">
        <Label x:Name="l_timer" Content="60" FontSize="48" FontWeight="Bold" HorizontalContentAlignment="Center" />
        <Label x:Name="l_question" Background="LightBlue" FontWeight="Bold" Padding="20" Content="Vajon ez itt a kérdés helye?" />
        <Button x:Name="b_answer_1" Click="b_Click" Margin="20" Padding="15" />
        <Button x:Name="b_answer_2" Click="b_Click" Margin="20" Padding="15" />
        <Button x:Name="b_answer_3" Click="b_Click" Margin="20" Padding="15" />
        <Button x:Name="b_answer_4" Click="b_Click" Margin="20" Padding="15" />
    </StackPanel>
</Window>
